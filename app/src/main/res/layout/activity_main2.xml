<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:background="@drawable/sans_titre">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:translationX="-100sp"
            android:translationY="-170sp"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:gravity="center"
            android:text="Connexion"
            android:textAppearance="@style/TextAppearance.AppCompat.Display4"
            android:textColor="#070707"
            android:textSize="40sp"
            android:textStyle="bold"
            android:translationY="-150dp" />

        <TextView
            android:id="@+id/editTextTextPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Votre identifiant : "
            android:textColor="#050505"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            android:translationX="45dp"
            android:translationY="-45dp" />


        <EditText
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:ems="10"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:hint="Idendifiants"
            android:inputType="textPersonName"
            android:paddingTop="10sp"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:translationY="-45dp" />


        <TextView
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingTop="5sp"
            android:text="Mots de passe :"
            android:textColor="#050505"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            android:translationX="45dp"
            android:translationY="-45dp" />

        <EditText
            android:id="@+id/pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:ems="10"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:hint="Mots de passe"
            android:inputType="textPassword"
            android:paddingTop="10sp"
            android:textSize="16sp"
            android:translationY="-45dp" />


        <Button
            android:id="@+id/btn"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:background="#76A7CD"
            android:fontFamily="sans-serif-medium"
            android:text="Se connecter"
            android:textColor="#0B0A0A"
            android:translationY="20dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>